<Window x:Class="Ass02_21127367.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ass02_21127367"
        mc:Ignorable="d"
        Height="630" Width="600"
        Title="Tic Tac Toe"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        >
    <!-- ==================== Define Page Resources ==================== -->

    
    <!-- ==================== Define Page Layout ==================== -->
    <DockPanel LastChildFill="True">
        <!-- Top tool bar -->
        <ToolBar Height="30" DockPanel.Dock="Top">
            <Button Content="Open"/>
            <Button Content="Save"/>
            <Button Content="Restart"/>
            <Button Content="Exit"/>
        </ToolBar>

        <!-- Caro Canvas Grid -->
        <Grid DockPanel.Dock="Bottom" Margin="20, 20">
            <Border BorderBrush="#D8D8D8" BorderThickness="2">
                <Canvas x:Name="Main_Canvas" />
            </Border>
        </Grid>

    </DockPanel>
</Window>
