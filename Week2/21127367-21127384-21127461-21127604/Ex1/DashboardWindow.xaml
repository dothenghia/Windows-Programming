<Window x:Class="Ex1.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard" Height="400" Width="600">
    <DockPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" DockPanel.Dock="Bottom" Height="60.04">
            <Button Content="Previous" Click="Previous_Click" DockPanel.Dock="Left" Width="70" Height="30"/>
            <Button Content="Next" Click="Next_Click" DockPanel.Dock="Right" Width="70" Height="30" Margin="28,0,0,0"/>
        </StackPanel>
        <TextBlock x:Name="txtCaption" Height="16" DockPanel.Dock="Bottom" Text="day la caption" 
            FontWeight="Bold" FontStyle="Italic" HorizontalAlignment="Center" Margin="0,6,0,0"/>
        <Image x:Name="imgSlideshow" Stretch="UniformToFill"/>
    </DockPanel>
</Window>
